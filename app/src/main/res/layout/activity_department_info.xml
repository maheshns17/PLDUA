<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context="com.pmaptechnotech.pldua.adminside.DepartmentInfoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:gravity="center"
        android:paddingRight="25dp"
        android:paddingTop="30dp">


        <Button
            android:id="@+id/btn_agriculture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Upload Agriculture Department Information"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:padding="10dp"
            android:textAllCaps="false"
            android:background="@drawable/border2"
            android:textStyle="bold|normal" />

        <Button
            android:id="@+id/btn_forest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Upload Forest Department Information"
            android:textColor="#ffffff"
            android:background="@drawable/border2"
            android:textSize="20dp"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textStyle="bold|normal" />

        <Button
            android:id="@+id/btn_mushroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Upload Mushroom Diseases Information"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:padding="10dp"
            android:textAllCaps="false"
            android:background="@drawable/border2"
            android:textStyle="bold|normal" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
