<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context="com.pmaptechnotech.pldua.adminside.UploadForestInfoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#5dac0a"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="15dp"
            android:text="Forest Department Information"
            android:textColor="#ffffff"
            android:textStyle="bold|normal" />

        <EditText
            android:id="@+id/edt_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@drawable/border"
            android:hint="Name"
            android:padding="8dp"
            android:textColor="#ffffff"
            android:textColorHint="#f4efef"/>

        <EditText
            android:id="@+id/edt_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:hint="Latitude "
            android:padding="8dp"
            android:textColor="#ffffff"
            android:textColorHint="#f4efef"/>

        <EditText
            android:id="@+id/edt_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:hint="Longitude"
            android:padding="8dp"
            android:textColor="#ffffff"
            android:textColorHint="#f4efef"/>

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:hint="Phone"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="#ffffff"
            android:textColorHint="#f4efef"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="#5dac0a"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold|normal" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
